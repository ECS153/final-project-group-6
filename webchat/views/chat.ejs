<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" type="text/css" href="/public/assets/chat.css">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>speakEZ</title>
  <script defer src="http://localhost:8008/socket.io/socket.io.js"></script>
  <script defer src="/public/client.js"></script>
</head>

  <body>
    <main>
      <div id="LeftSide">

        <h1>Select A Chat Room</h1>

        <div id="room-container">
          <% Object.keys(rooms).forEach(room =>{ %>
            <div id="new-room">
            <%= room %> <a href="/<%= room %>" id="join-room">Join the Room</a><% }) %>
            </div>
        </div>

        <div id = "submit-container">
          <form action="/room" method="POST">
            <input name="room" placeholder="Type a room name here..." id="room-input" type="text" required> </input>
            <button type="submit" id="newRoom">Create New Room</button>
          </form>
        </div>
      </div>

      </div>
      <div id="RightSide">
        <h2>Welcome to SpeakEZ</h2>
        <a href="/auth/logout" class="button">SIGN OUT?</a>
      </div>
    </main>
  </body>
</html>
